<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TyperPro.ViewModels"
        x:Class="TyperPro.Views.MainWindow"
        Width="900"
        Height="550"
        Title="TyperPro – Cybrella 2026">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <StackPanel Margin="32" Spacing="16">

        <TextBlock Text="TyperPro"
                   FontSize="28"
                   FontWeight="Bold"/>

        <Border Padding="16"
                CornerRadius="8"
                BorderThickness="1">
            <TextBlock Text="{Binding TargetText}"
                       FontSize="18"
                       TextWrapping="Wrap"/>
        </Border>

        <TextBox Text="{Binding InputText}"
                 FontSize="18"
                 Watermark="Start typing here…"/>

        <StackPanel Orientation="Horizontal" Spacing="24">
            <TextBlock Text="{Binding Wpm, StringFormat='WPM: {0}'}"
                       FontSize="16"/>

            <TextBlock Text="{Binding Accuracy, StringFormat='Accuracy: {0}%'}"
                       FontSize="16"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="Start"
                    Command="{Binding StartCommand}"/>

            <Button Content="Reset"
                    Command="{Binding ResetCommand}"/>
        </StackPanel>

    </StackPanel>
</Window>